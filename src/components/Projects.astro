<section id="projects" class="py-32 px-8 relative overflow-hidden">
  <!-- Background elements for visual interest -->
  <div class="absolute inset-0 bg-[#0a0a0a] z-0"></div>
  <div class="absolute right-0 top-[15%] w-[40%] h-[40%] opacity-[0.025] bg-[repeating-linear-gradient(45deg,rgba(255,255,255,0.1),rgba(255,255,255,0.1)_1px,transparent_1px,transparent_30px)]"></div>
  
  <div class="container mx-auto relative z-10">
    <div class="mb-16">
      <h2 class="section-title">Projects</h2>
      <div class="section-title-line"></div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Project 1 -->
      <div class="project-card group">
        <div class="project-content">
          <div class="project-header mb-4">
            <h3 class="text-2xl font-light text-white mb-3 group-hover:translate-x-1 transition-transform duration-300">kernel-anticheat</h3>
          </div>
          <p class="text-white/60 mb-6 group-hover:text-white/80 transition-colors duration-300">A kernel-level anticheat solution that prevents unauthorized access to game memory</p>
          <div class="flex flex-wrap gap-3 mb-6">
            <span class="tech-tag">C++</span>
            <span class="tech-tag">Windows</span>
          </div>
          <a href="https://github.com/Vasie1337/kernel-anticheat" class="project-link group">
            View Project
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7l5 5-5 5M5 12h13" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Project 2 -->
      <div class="project-card group">
        <div class="project-content">
          <div class="project-header mb-4">
            <h3 class="text-2xl font-light text-white mb-3 group-hover:translate-x-1 transition-transform duration-300">sharedsection-driver</h3>
          </div>
          <p class="text-white/60 mb-6 group-hover:text-white/80 transition-colors duration-300">A driver that implements a shared section to communicate between kernel and a user-mode process</p>
          <div class="flex flex-wrap gap-3 mb-6">
            <span class="tech-tag">C++</span>
            <span class="tech-tag">Windows</span>
          </div>
          <a href="https://github.com/Vasie1337/sharedsection-driver" class="project-link group">
            View Project
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7l5 5-5 5M5 12h13" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Project 3 -->
      <div class="project-card group">
        <div class="project-content">
          <div class="project-header mb-4">
            <h3 class="text-2xl font-light text-white mb-3 group-hover:translate-x-1 transition-transform duration-300">weather-api</h3>
          </div>
          <p class="text-white/60 mb-6 group-hover:text-white/80 transition-colors duration-300">A Next.js app that displays weather data from WeatherAPI</p>
          <div class="flex flex-wrap gap-3 mb-6">
            <span class="tech-tag">Next.js</span>
            <span class="tech-tag">Docker</span>
          </div>
          <a href="https://github.com/Vasie1337/weather-api" class="project-link group">
            View Project
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7l5 5-5 5M5 12h13" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Project 4 -->
      <div class="project-card group">
        <div class="project-content">
          <div class="project-header mb-4">
            <h3 class="text-2xl font-light text-white mb-3 group-hover:translate-x-1 transition-transform duration-300">vasie-dev</h3>
          </div>
          <p class="text-white/60 mb-6 group-hover:text-white/80 transition-colors duration-300">A personal portfolio website built with Astro</p>
          <div class="flex flex-wrap gap-3 mb-6">
            <span class="tech-tag">Astro</span>
            <span class="tech-tag">Docker</span>
          </div>
          <a href="https://github.com/Vasie1337/vasie-dev" class="project-link group">
            View Project
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7l5 5-5 5M5 12h13" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .project-card {
    @apply bg-[#0a0a0a] border border-white/5 p-10 transition-all duration-500 hover:border-white/20 relative;
    transform-style: preserve-3d;
    box-shadow: 0 10px 30px -15px rgba(0, 0, 0, 0.3);
  }
  
  .project-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.03) 0%, rgba(255, 255, 255, 0) 100%);
    opacity: 0;
    transition: opacity 0.5s ease;
  }
  
  .project-card:hover::before {
    opacity: 1;
  }

  .tech-tag {
    @apply bg-white/5 text-white/60 px-3.5 py-1.5 text-sm border border-white/5 transition-colors duration-300;
  }
  
  .project-card:hover .tech-tag {
    @apply text-white/80 border-white/10;
  }
  
  .project-link {
    @apply text-white/60 hover:text-white flex items-center transition-colors duration-300 relative;
    width: fit-content;
  }
  
  .project-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3) 50%, transparent 100%);
    transform: scaleX(0.3);
    opacity: 0.5;
    transform-origin: left;
    transition: all 0.3s ease;
  }
  
  .project-link:hover::after {
    transform: scaleX(1);
    opacity: 1;
  }
</style>
