<section id="projects" class="py-32 relative">
  <div class="container mx-auto px-8 relative z-10">
    <div class="mb-16">
      <h2 class="text-4xl md:text-5xl font-light text-white">Projects</h2>
      <div class="h-px w-16 bg-white/30 mt-4"></div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Project 1 -->
      <div class="project-card">
        <div class="project-content">
          <h3 class="text-2xl font-light text-white mb-3">SecureKernel</h3>
          <p class="text-gray-300 mb-6">A custom security-focused microkernel implementation with formal verification components</p>
          <div class="flex flex-wrap gap-3 mb-6">
            <span class="tech-tag">C</span>
            <span class="tech-tag">Assembly</span>
            <span class="tech-tag">Coq</span>
            <span class="tech-tag">Rust</span>
          </div>
          <p class="text-white/60 mb-8">Reduced attack surface by 73% compared to monolithic designs</p>
          <a href="https://github.com/Vasie1337/SecureKernel" class="text-white hover:text-white/80 underline underline-offset-4 transition-colors duration-200">View Project →</a>
        </div>
      </div>

      <!-- Project 2 -->
      <div class="project-card">
        <div class="project-content">
          <h3 class="text-2xl font-light text-white mb-3">BinaryDecode</h3>
          <p class="text-gray-300 mb-6">Advanced binary analysis framework for automated vulnerability detection and exploitation</p>
          <div class="flex flex-wrap gap-3 mb-6">
            <span class="tech-tag">C++</span>
            <span class="tech-tag">Python</span>
            <span class="tech-tag">LLVM</span>
            <span class="tech-tag">Capstone</span>
          </div>
          <p class="text-white/60 mb-8">Discovered 3 zero-day vulnerabilities in commercial software</p>
          <a href="https://github.com/Vasie1337/BinaryDecode" class="text-white hover:text-white/80 underline underline-offset-4 transition-colors duration-200">View Project →</a>
        </div>
      </div>

      <!-- Project 3 -->
      <div class="project-card">
        <div class="project-content">
          <h3 class="text-2xl font-light text-white mb-3">HyperAuth</h3>
          <p class="text-gray-300 mb-6">High-performance authentication system with hardware-level security guarantees</p>
          <div class="flex flex-wrap gap-3 mb-6">
            <span class="tech-tag">C</span>
            <span class="tech-tag">Rust</span>
            <span class="tech-tag">SGX</span>
            <span class="tech-tag">TPM</span>
          </div>
          <p class="text-white/60 mb-8">300% faster than industry-standard solutions with stronger guarantees</p>
          <a href="https://github.com/Vasie1337/HyperAuth" class="text-white hover:text-white/80 underline underline-offset-4 transition-colors duration-200">View Project →</a>
        </div>
      </div>

      <!-- Project 4 -->
      <div class="project-card">
        <div class="project-content">
          <h3 class="text-2xl font-light text-white mb-3">LowLatencyNet</h3>
          <p class="text-gray-300 mb-6">Ultra-low latency networking stack optimized for high-frequency trading environments</p>
          <div class="flex flex-wrap gap-3 mb-6">
            <span class="tech-tag">C</span>
            <span class="tech-tag">DPDK</span>
            <span class="tech-tag">Assembly</span>
            <span class="tech-tag">eBPF</span>
          </div>
          <p class="text-white/60 mb-8">Achieved sub-microsecond latency for market data processing</p>
          <a href="https://github.com/Vasie1337/LowLatencyNet" class="text-white hover:text-white/80 underline underline-offset-4 transition-colors duration-200">View Project →</a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .project-card {
    @apply bg-[#0a0a0a] border border-white/5 p-8 transition-all duration-300 hover:border-white/20;
  }
  
  .tech-tag {
    @apply bg-white/10 text-white/70 px-3 py-1 text-sm;
  }
</style>
