<section id="projects" class="py-32 relative">
  <div class="container mx-auto px-8 relative z-10">
    <div class="mb-16">
      <h2 class="text-4xl md:text-5xl font-light text-white">Projects</h2>
      <div class="h-px w-16 bg-white/30 mt-4"></div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <div class="project-card">
        <div class="project-content">
          <h3 class="text-2xl font-light text-white mb-3">kernel-anticheat</h3>
          <p class="text-gray-300 mb-6">A kernel-level anticheat solution that prevents unauthorized access to game memory</p>
          <div class="flex flex-wrap gap-3 mb-6">
            <span class="tech-tag">C++</span>
            <span class="tech-tag">Windows</span>
          </div>
          <a href="https://github.com/Vasie1337/kernel-anticheat" class="text-white hover:text-white/80 underline underline-offset-4 transition-colors duration-200">View Project →</a>
        </div>
      </div>

      <div class="project-card">
        <div class="project-content">
          <h3 class="text-2xl font-light text-white mb-3">sharedsection-driver</h3>
          <p class="text-gray-300 mb-6">A driver that implements a shared section to communicate between kernel and a user-mode process</p>
          <div class="flex flex-wrap gap-3 mb-6">
            <span class="tech-tag">C++</span>
            <span class="tech-tag">Windows</span>
          </div>
          <a href="https://github.com/Vasie1337/sharedsection-driver" class="text-white hover:text-white/80 underline underline-offset-4 transition-colors duration-200">View Project →</a>
        </div>
      </div>

      <div class="project-card">
        <div class="project-content">
          <h3 class="text-2xl font-light text-white mb-3">weather-api</h3>
          <p class="text-gray-300 mb-6">A Next.js app that displays weather data from WeatherAPI</p>
          <div class="flex flex-wrap gap-3 mb-6">
            <span class="tech-tag">Next.js</span>
            <span class="tech-tag">Docker</span>
          </div>
          <a href="https://github.com/Vasie1337/weather-api" class="text-white hover:text-white/80 underline underline-offset-4 transition-colors duration-200">View Project →</a>
        </div>
      </div>

      <div class="project-card">
        <div class="project-content">
          <h3 class="text-2xl font-light text-white mb-3">vasie-dev</h3>
          <p class="text-gray-300 mb-6">A personal portfolio website built with Astro</p>
          <div class="flex flex-wrap gap-3 mb-6">
            <span class="tech-tag">Astro</span>
            <span class="tech-tag">Docker</span>
          </div>
          <a href="https://github.com/Vasie1337/vasie-dev" class="text-white hover:text-white/80 underline underline-offset-4 transition-colors duration-200">View Project →</a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .project-card {
    @apply bg-[#0a0a0a] border border-white/5 p-8 transition-all duration-300 hover:border-white/20;
  }
  
  .tech-tag {
    @apply bg-white/10 text-white/70 px-3 py-1 text-sm;
  }
</style>
