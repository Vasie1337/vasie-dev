<style>
  .contact-box {
    @apply bg-[#0a0a0a] border border-white/5 p-8 transition-all duration-300 hover:border-white/20;
  }
  
  .contact-item {
    @apply flex items-center hover:opacity-80 transition-all duration-300;
    min-width: 220px;
  }
  
  .icon-container {
    @apply bg-white/5 text-white/70 p-3 rounded-sm mr-4;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
