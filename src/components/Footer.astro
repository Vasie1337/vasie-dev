---
const currentYear = new Date().getFullYear();
---

<footer class="py-16 border-t border-white/5">
  <div class="container mx-auto px-8">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center">
      <div class="mb-8 md:mb-0">
        <div class="text-2xl font-light text-white mb-3">
          <span class="text-white/80">&lt;</span>VASIE<span class="text-white/80">/&gt;</span>
        </div>
      </div>
      
      <div class="text-right">
        <div class="text-white/40 text-sm font-light">
          &copy; {currentYear} | Vasie
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  footer {
    background-color: #0a0a0a;
  }
</style>
